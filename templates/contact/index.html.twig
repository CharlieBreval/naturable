{% extends 'base.html.twig' %}
{% block body_class %}contact-index{% endblock %}
{% block body %}
    <div class="vk-contact-us">

        <!--BENGIN CONTENT HEADER-->
        <section class="site-content-area">
            <div class="container-fluid">
                <div class="row">
                    <div class="vk-contact-us">
                        <div class="col-md-7 vk-clear-padding">
                            <div class="vk-contact-us-map">
                                <div id="map"></div>
                                <iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=2+rue+Sévigné%2C+44000+Nantes&key=AIzaSyBwyPya0nBQUkl5DXWkwFNE3s1yTTH0HHE" allowfullscreen></iframe>                            </div>
                        </div>
                        <div class="col-md-5 vk-clear-padding">
                            <div class="vk-contact-us-info">
                                <div class="vk-contact-us-info-header">
                                    <h3>Informations pratiques</h3>
                                    <h2>Contactez-moi</h2>
                                    <div class="clearfix"></div>
                                    <div class="vk-contact-border"></div>
                                </div>
                                <div class="vk-contact-us-info-text">
                                    <ul>
                                        <li>
                                            <div class="vk-contact-us-info-text-icon">
                                                <span class="ti-location-pin"></span>
                                            </div>
                                            <div class="vk-contact-us-info-text-right">
                                                <h4>CONSULTATION (SUR RENDEZ-VOUS UNIQUEMENT)</h4>
                                                <p>2 rue Sévigné, 44 000 Nantes</p>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="vk-contact-us-info-text-icon">
                                                <span class="ti-email"></span>
                                            </div>
                                            <div class="vk-contact-us-info-text-right">
                                                <h4>Email</h4>
                                                <p>naturable44@gmail.com</p>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="vk-contact-us-info-text-icon">
                                                <span class="ti-mobile"></span>
                                            </div>
                                            <div class="vk-contact-us-info-text-right">
                                                <h4>TEL</h4>
                                                <p>06 27 65 72 75</p>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="vk-contact-form">
                        <div class="container">
                            <div class="vk-contact-form-info-header">
                                <h2>Une question à me poser ?</h2>
                                <div class="clearfix"></div>
                                <div class="vk-contact-border"></div>
                            </div>
                            <div class="vk-contact-form-info-body">
                                <div class="row">
                                    {{ form_start(form) }}
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                {{ form_widget(form.name) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                {{ form_widget(form.email) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                {{ form_widget(form.subject) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                {{ form_widget(form.message) }}
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>

                                        <div class="form-group">
                                            <div class="vk-btn-send">
                                                <button type="submit" class="btn vk-btn-primary btn-block">ENVOYER <i class="fa fa-paper-plane" aria-hidden="true"></i></button>
                                            </div>
                                        </div>
                                    {{ form_end(form)}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!--END CONTENT ABOUT-->

    </div>

{% endblock %}
